        "monolog/monolog": "^1.17",
        "miljar/php-exif": "^0.6.3",
        "j4mie/idiorm": "^1.5.3",
        "webonyx/graphql-php": "^0.13.8",
        "gumlet/php-image-resize": "1.8.*",
